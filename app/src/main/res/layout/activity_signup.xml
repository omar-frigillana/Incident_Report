<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_default"
    tools:context=".SignupActivity">

    <include
        android:id="@+id/toolBarSignUp"
        layout="@layout/app_bar_sign_up" />

    <LinearLayout
        android:layout_below="@id/toolBarSignUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editFirstname"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="First Name"
            android:textColorHint="#A9AFB1" />

        <EditText
            android:id="@+id/editLastname"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Last Name"
            android:textColorHint="#A9AFB1" />

        <EditText
            android:id="@+id/editAddress"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Address"
            android:textColorHint="#A9AFB1" />

        <EditText
            android:id="@+id/editContact"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Contact Number"
            android:textColorHint="#A9AFB1" />

        <EditText
            android:id="@+id/editEmail"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Email"
            android:textColorHint="#A9AFB1" />

        <EditText
            android:id="@+id/editPassword"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Password"
            android:textColorHint="#A9AFB1"/>

        <EditText
            android:id="@+id/editConfirmPassword"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Confirm Password"
            android:textColorHint="#A9AFB1"/>

        <Button
            android:id="@+id/btnRegister"
            android:background="@drawable/rounded_button_main"
            android:fontFamily="@font/mazzardh_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:text="Register"
            android:textSize="18dp"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>